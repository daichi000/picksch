<!DOCTYPE html>
<html>
  <head>
    <title>Eduate</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>

  <body>
    <header>
      <div class="header-logo">
        <% if @current_user %>
          <%= link_to("Eduate", "/posts/index") %>
        <% else %>
          <%= link_to("Eduate", "/") %>
        <% end %>
      </div>
      <ul class="header-menus">
        <% if @current_user %>
          <li class="btn">
            <%= link_to("News","/posts/news") %>
          </li>
         
          <li class="btn">
            <%= link_to("投稿一覧", "/posts/index") %>
          </li>
          <li class="btn">
            <%= link_to("新規投稿", "/posts/new") %>
          </li>
          <li class="btn">
            <%= link_to("ユーザー一覧", "/users/index") %>
          </li>

        </li>
          <li class="btn"> 
            <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
          </li>
          <li class="btn">
            <%= link_to("ログアウト","/logout",{method: :post})%>
          </li>
        <% else %>
          <li class="btn">
            <%= link_to("Eduateとは", "/about") %>
          </li>
 <!--　
 <li class="btn">
  <%= link_to("新規登録", "/signup") %>
 </li> 
  -->

          <li class="btn">
            <%= link_to("ログイン", "/login") %>
          </li>
        <% end %>
      </ul>
    </header>

    
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>